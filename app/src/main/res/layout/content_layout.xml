<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_layout">

    <TextView
        android:id="@+id/textUMTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="8dp"
        android:text="UMTS"
        app:layout_constraintBottom_toTopOf="@+id/textUMTS1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textUMTS1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/main_map"
        app:layout_constraintEnd_toEndOf="@+id/textUMTS"
        app:layout_constraintStart_toStartOf="@+id/textUMTS"
        app:layout_constraintTop_toBottomOf="@+id/textUMTS" />

    <TextView
        android:id="@+id/textLTE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="8dp"
        android:text="LTE"
        app:layout_constraintBottom_toTopOf="@+id/textLTE1"
        app:layout_constraintEnd_toStartOf="@+id/textWifi"
        app:layout_constraintStart_toEndOf="@+id/textUMTS"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLTE1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/main_map"
        app:layout_constraintEnd_toEndOf="@+id/textLTE"
        app:layout_constraintStart_toStartOf="@+id/textLTE"
        app:layout_constraintTop_toBottomOf="@+id/textLTE" />

    <TextView
        android:id="@+id/textWifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="8dp"
        android:text="Wi-Fi"
        app:layout_constraintBottom_toTopOf="@+id/textWifi1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textWifi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/main_map"
        app:layout_constraintEnd_toEndOf="@+id/textWifi"
        app:layout_constraintStart_toStartOf="@+id/textWifi"
        app:layout_constraintTop_toBottomOf="@+id/textWifi" />

    <fragment
        android:id="@+id/main_map"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Current location:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_map" />

    <TextView
        android:id="@+id/textLatLng"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="0, 0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textLocation"
        app:layout_constraintTop_toBottomOf="@+id/main_map" />


</android.support.constraint.ConstraintLayout>